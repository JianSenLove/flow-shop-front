  color: #ec9222;
}
.btn {
  height: 66rpx;
  line-height: 66rpx;
  border-radius: 100rpx;
  background: #fa436a;
  font-size: 30rpx;
  color: #fff;
  margin: 30rpx auto 20rpx;
  bottom: 10rpx;
  background-image: linear-gradient(to right, #f78ca0 0%, #f9748f 19%, #fd868c 60%, #fe9a8b 100%);
}
.picker {
  padding: 20rpx 30rpx;
}
.picker_title {
  margin-left: 20rpx;
  color: #636363;
}
.kerg {
